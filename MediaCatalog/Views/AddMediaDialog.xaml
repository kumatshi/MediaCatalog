<Window x:Class="MediaCatalog.Views.AddMediaDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Добавить медиа"
        Height="460" 
        Width="430"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#1F1B1A"
        Name="AddMediaDialogWindow">

    <Window.Resources>
       
        <SolidColorBrush x:Key="CaramelBrush" Color="#FFD6A577"/>
        <SolidColorBrush x:Key="SoftGoldBrush" Color="#FFE8D0A9"/>
        <SolidColorBrush x:Key="LightBrownBrush" Color="#FF3A2F2A"/>
        <SolidColorBrush x:Key="TextBrush" Color="#FFF5EBDC"/>
        <SolidColorBrush x:Key="LabelBrush" Color="#FFC8B8A8"/>
        <SolidColorBrush x:Key="TextBoxBackgroundBrush" Color="#FF2A2422"/>
        <SolidColorBrush x:Key="ErrorBrush" Color="#E57373"/>

        
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>

       
        <Style TargetType="TextBox">
            <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
            <Setter Property="Background" Value="{StaticResource TextBoxBackgroundBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource CaramelBrush}"/>
            <Setter Property="BorderThickness" Value="1.3"/>
            <Setter Property="Padding" Value="4"/>
            <Setter Property="Margin" Value="0 0 0 10"/>
            <Setter Property="Height" Value="28"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#000000" BlurRadius="8" Opacity="0.25"/>
                </Setter.Value>
            </Setter>

            <Style.Triggers>
                <Trigger Property="IsKeyboardFocused" Value="True">
                    <Setter Property="BorderBrush" Value="{StaticResource SoftGoldBrush}"/>
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect Color="#EECEAA"
                                              BlurRadius="12" Opacity="0.6"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>

        
        <Style TargetType="ComboBox">
            <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
            <Setter Property="Background" Value="{StaticResource TextBoxBackgroundBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource CaramelBrush}"/>
            <Setter Property="Height" Value="28"/>
            <Setter Property="Margin" Value="0 0 0 10"/>
            <Setter Property="Padding" Value="4"/>
        </Style>

        
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource LabelBrush}"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="0 0 10 10"/>
        </Style>

        
        <Style TargetType="Button">
            <Setter Property="Foreground" Value="#1F1B1A"/>
            <Setter Property="Background" Value="{StaticResource CaramelBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource SoftGoldBrush}"/>
            <Setter Property="BorderThickness" Value="1.5"/>
            <Setter Property="Padding" Value="5 3"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Width" Value="100"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#000000" BlurRadius="10" Opacity="0.25"/>
                </Setter.Value>
            </Setter>

            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource SoftGoldBrush}"/>
                    <Setter Property="Cursor" Value="Hand"/>
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect Color="#EECEAA"
                                              BlurRadius="15"
                                              Opacity="0.8"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>

                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#FFC69263"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        
        <Style x:Key="OmdbButtonStyle" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
            <Setter Property="Background" Value="#4CAF50"/>
            <Setter Property="BorderBrush" Value="#81C784"/>
            <Setter Property="Width" Value="120"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>

    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        
        <TextBlock Grid.Row="0" Grid.Column="0" 
                   Text="Тип:" 
                   VerticalAlignment="Center"/>
        <ComboBox Grid.Row="0" Grid.Column="1" 
                  Name="MediaTypeComboBox"
                  SelectionChanged="MediaTypeComboBox_SelectionChanged"/>

        
        <TextBlock Grid.Row="1" Grid.Column="0" 
                   Text="Название:" 
                   VerticalAlignment="Center"/>
        <TextBox Grid.Row="1" Grid.Column="1" 
                 Name="TitleTextBox"
                 Text="{Binding Title, UpdateSourceTrigger=PropertyChanged}"/>

       
        <TextBlock Grid.Row="2" Grid.Column="0" 
                   Text="Год:" 
                   VerticalAlignment="Center"/>
        <TextBox Grid.Row="2" Grid.Column="1" 
                 Name="YearTextBox"
                 Text="{Binding Year, UpdateSourceTrigger=PropertyChanged}"/>

        
        <TextBlock Grid.Row="3" Grid.Column="0" 
                   Text="Жанр:" 
                   VerticalAlignment="Center"/>
        <TextBox Grid.Row="3" Grid.Column="1" 
                 Name="GenreTextBox"
                 Text="{Binding Genre, UpdateSourceTrigger=PropertyChanged}"/>

        
        <TextBlock Grid.Row="4" Grid.Column="0" 
                   Text="Рейтинг:" 
                   VerticalAlignment="Center"/>
        <TextBox Grid.Row="4" Grid.Column="1" 
                 Name="RatingTextBox"
                 Text="{Binding Rating, UpdateSourceTrigger=PropertyChanged}"/>

        
        <StackPanel Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="2"
                    Name="SpecificFieldsPanel" 
                    Margin="0 10"/>

        
        <TextBlock Grid.Row="6" Grid.Column="0" Grid.ColumnSpan="2"
                   Name="ValidationMessageText"
                   Text="{Binding ValidationMessage}"
                   Foreground="{StaticResource ErrorBrush}"
                   TextWrapping="Wrap"
                   Margin="0 10"/>

       
        <StackPanel Grid.Row="7" Grid.Column="0" Grid.ColumnSpan="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right">

           
            <Button Content="Найти на OMDb" 
                    Name="FindOmdbButton"
                    Click="FindOmdbButton_Click"
                    Margin="0 0 10 0"
                    Style="{StaticResource OmdbButtonStyle}"
                    Visibility="{Binding IsMovie, Converter={StaticResource BooleanToVisibilityConverter}}"/>

            
            <Button Content="Сохранить"
                    Name="SaveButton"
                    Click="SaveButton_Click"
                    IsDefault="True"
                    IsEnabled="{Binding IsValid}"/>

           
            <Button Content="Отмена"
                    Name="CancelButton"
                    Click="CancelButton_Click"
                    IsCancel="True"
                    Margin="5,0,0,0"/>

        </StackPanel>

    </Grid>
</Window>