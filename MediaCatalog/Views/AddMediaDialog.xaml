<Window x:Class="MediaCatalog.Views.AddMediaDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Добавить медиа" Height="450" Width="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="0" Grid.Column="0" Text="Тип:" Margin="0,0,10,10" VerticalAlignment="Center"/>
        <ComboBox Grid.Row="0" Grid.Column="1" Name="MediaTypeComboBox" Margin="0,0,0,10" Height="25"
                  SelectionChanged="MediaTypeComboBox_SelectionChanged"/>

        <TextBlock Grid.Row="1" Grid.Column="0" Text="Название:" Margin="0,0,10,10" VerticalAlignment="Center"/>
        <TextBox Grid.Row="1" Grid.Column="1" Name="TitleTextBox" Margin="0,0,0,10" Height="25" 
                 Text="{Binding Title, UpdateSourceTrigger=PropertyChanged}"/>

        <TextBlock Grid.Row="2" Grid.Column="0" Text="Год:" Margin="0,0,10,10" VerticalAlignment="Center"/>
        <TextBox Grid.Row="2" Grid.Column="1" Name="YearTextBox" Margin="0,0,0,10" Height="25"
                 Text="{Binding Year, UpdateSourceTrigger=PropertyChanged}"/>

        <TextBlock Grid.Row="3" Grid.Column="0" Text="Жанр:" Margin="0,0,10,10" VerticalAlignment="Center"/>
        <TextBox Grid.Row="3" Grid.Column="1" Name="GenreTextBox" Margin="0,0,0,10" Height="25"
                 Text="{Binding Genre, UpdateSourceTrigger=PropertyChanged}"/>

        <TextBlock Grid.Row="4" Grid.Column="0" Text="Рейтинг:" Margin="0,0,10,10" VerticalAlignment="Center"/>
        <TextBox Grid.Row="4" Grid.Column="1" Name="RatingTextBox" Margin="0,0,0,10" Height="25"
                 Text="{Binding Rating, UpdateSourceTrigger=PropertyChanged}"/>

        <StackPanel Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="2" Name="SpecificFieldsPanel" 
                    Margin="0,0,0,10"/>
        <TextBlock Grid.Row="6" Grid.Column="0" Grid.ColumnSpan="2" Name="ValidationMessageText" 
                   Text="{Binding ValidationMessage}"
                   Foreground="Red" TextWrapping="Wrap" Margin="0,10,0,10"/>

        <StackPanel Grid.Row="7" Grid.Column="0" Grid.ColumnSpan="2" Orientation="Horizontal" 
                    HorizontalAlignment="Right">
            <Button Content="Сохранить" Name="SaveButton" Width="80" Height="30" Margin="5" 
                    Click="SaveButton_Click" IsDefault="True" IsEnabled="{Binding IsValid}"/>
            <Button Content="Отмена" Name="CancelButton" Width="80" Height="30" Margin="5" 
                    Click="CancelButton_Click" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>