<Window x:Class="MediaCatalog.Views.MusicPlayerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:fa="clr-namespace:FontAwesome.WPF;assembly=FontAwesome.WPF"
        mc:Ignorable="d"
        Title="Моя музыка"
        Height="600"
        Width="900"
        WindowStartupLocation="CenterOwner"
        Background="#1F1B1A">

    <Window.Resources>
        <SolidColorBrush x:Key="CaramelBrush" Color="#FFD6A577"/>
        <SolidColorBrush x:Key="SoftGoldBrush" Color="#FFE8D0A9"/>
        <SolidColorBrush x:Key="LightBrownBrush" Color="#FF3A2F2A"/>
        <SolidColorBrush x:Key="TextBrush" Color="#FFF5EBDC"/>
        <SolidColorBrush x:Key="LabelBrush" Color="#FFC8B8A8"/>
        <SolidColorBrush x:Key="PanelBackgroundBrush" Color="#151212"/>

        <Style TargetType="Button">
            <Setter Property="Foreground" Value="#1F1B1A"/>
            <Setter Property="Background" Value="{StaticResource CaramelBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource SoftGoldBrush}"/>
            <Setter Property="BorderThickness" Value="1.5"/>
            <Setter Property="Padding" Value="5 3"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>

        <Style TargetType="Slider">
            <Setter Property="Foreground" Value="{StaticResource CaramelBrush}"/>
            <Setter Property="Background" Value="#2A2422"/>
        </Style>
    </Window.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0 0 0 10">
            <Button x:Name="LoadMusicButton" Click="LoadMusicButton_Click" Margin="0 0 10 0">
                <StackPanel Orientation="Horizontal">
                    <fa:ImageAwesome Icon="FolderOpen" Width="16" Margin="0 0 5 0"/>
                    <TextBlock Text="Загрузить музыку"/>
                </StackPanel>
            </Button>

            <Button x:Name="PlayButton" Click="PlayButton_Click" Margin="0 0 10 0">
                <StackPanel Orientation="Horizontal">
                    <fa:ImageAwesome Icon="Play" Width="16" Margin="0 0 5 0"/>
                    <TextBlock Text="Воспроизвести"/>
                </StackPanel>
            </Button>

            <Button x:Name="PauseButton" Click="PauseButton_Click" Margin="0 0 10 0">
                <StackPanel Orientation="Horizontal">
                    <fa:ImageAwesome Icon="Pause" Width="16" Margin="0 0 5 0"/>
                    <TextBlock Text="Пауза"/>
                </StackPanel>
            </Button>

            <Button x:Name="StopButton" Click="StopButton_Click">
                <StackPanel Orientation="Horizontal">
                    <fa:ImageAwesome Icon="Stop" Width="16" Margin="0 0 5 0"/>
                    <TextBlock Text="Стоп"/>
                </StackPanel>
            </Button>
        </StackPanel>

        <Border Grid.Row="1" Background="{StaticResource PanelBackgroundBrush}" CornerRadius="8" Padding="10">
            <ListView x:Name="MusicListView" 
                      SelectionChanged="MusicListView_SelectionChanged"
                      ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Border Background="#2A2422" CornerRadius="5" Margin="0 2" Padding="10">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <fa:ImageAwesome Grid.Column="0" 
                                                Icon="Music" 
                                                Width="20" 
                                                Margin="0 0 10 0"
                                                Foreground="{StaticResource CaramelBrush}"/>

                                <StackPanel Grid.Column="1">
                                    <TextBlock Text="{Binding Title}" 
                                               FontWeight="Bold" 
                                               Foreground="{StaticResource TextBrush}"/>
                                    <TextBlock Text="{Binding Artist}" 
                                               Foreground="{StaticResource LabelBrush}"/>
                                    <TextBlock Text="{Binding Album}" 
                                               Foreground="{StaticResource LabelBrush}"
                                               FontStyle="Italic"/>
                                </StackPanel>

                                <TextBlock Grid.Column="2" 
                                          Text="{Binding Duration, StringFormat=mm\\:ss}"
                                          Foreground="{StaticResource LabelBrush}"
                                          VerticalAlignment="Center"/>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Border>

        <Border Grid.Row="2" Background="#2A2422" CornerRadius="5" Margin="0 10 0 5" Padding="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock x:Name="NowPlayingTitle" 
                               Text="Не выбрано" 
                               FontWeight="Bold" 
                               FontSize="14"
                               Foreground="{StaticResource TextBrush}"/>
                    <TextBlock x:Name="NowPlayingArtist" 
                               Text="" 
                               Foreground="{StaticResource LabelBrush}"/>
                </StackPanel>

                <TextBlock Grid.Column="1" 
                          x:Name="NowPlayingTime" 
                          Text="00:00 / 00:00"
                          Foreground="{StaticResource LabelBrush}"
                          VerticalAlignment="Center"/>
            </Grid>
        </Border>

        <Grid Grid.Row="3" Margin="0 5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Slider x:Name="ProgressSlider" 
                    Grid.Column="1" 
                    Margin="10 0"
                    ValueChanged="ProgressSlider_ValueChanged"/>
        </Grid>

        <MediaElement x:Name="MediaPlayer" 
                      LoadedBehavior="Manual" 
                      UnloadedBehavior="Stop"
                      MediaOpened="MediaPlayer_MediaOpened"
                      MediaEnded="MediaPlayer_MediaEnded"/>
    </Grid>
</Window>