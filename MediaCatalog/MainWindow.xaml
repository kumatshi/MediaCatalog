<Window x:Class="MediaCatalog.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Media Catalog" Height="600" Width="900"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10" Background="#f5f5f5">
            <Button Content="Добавить" Width="80" Height="30" Margin="5"/>
            <Button Content="Редактировать" Width="80" Height="30" Margin="5"/>
            <Button Content="Удалить" Width="80" Height="30" Margin="5"/>

            <TextBox Name="SearchBox" Width="200" Height="30" Margin="20,5,5,5" 
                     Text="Поиск..."/>

            <ComboBox Name="FilterComboBox" Width="120" Height="30" Margin="5"
                      SelectedIndex="0">
                <ComboBoxItem Content="Все"/>
                <ComboBoxItem Content="Книги"/>
                <ComboBoxItem Content="Фильмы"/>
                <ComboBoxItem Content="Игры"/>
            </ComboBox>

            <ComboBox Name="StatusComboBox" Width="120" Height="30" Margin="5"
                      SelectedIndex="0">
                <ComboBoxItem Content="Все статусы"/>
                <ComboBoxItem Content="В планах"/>
                <ComboBoxItem Content="В процессе"/>
                <ComboBoxItem Content="Завершено"/>
            </ComboBox>
        </StackPanel>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="300"/>
            </Grid.ColumnDefinitions>

            <ListView Grid.Column="0" Margin="10,10,263,10" Name="MediaListView" Grid.ColumnSpan="2">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Название" Width="200" DisplayMemberBinding="{Binding Title}"/>
                        <GridViewColumn Header="Тип" Width="80" DisplayMemberBinding="{Binding MediaType}"/>
                        <GridViewColumn Header="Год" Width="60" DisplayMemberBinding="{Binding Year}"/>
                        <GridViewColumn Header="Жанр" Width="120" DisplayMemberBinding="{Binding Genre}"/>
                        <GridViewColumn Header="Статус" Width="100" DisplayMemberBinding="{Binding Status}"/>
                        <GridViewColumn Header="Рейтинг" Width="60" DisplayMemberBinding="{Binding Rating}"/>
                    </GridView>
                </ListView.View>
            </ListView>

            <Border Grid.Column="1" Background="#f9f9f9" Margin="37,10,0,10" 
                    BorderBrush="#ddd" BorderThickness="1">
                <ScrollViewer Margin="-1,-1,58,10">
                    <StackPanel Margin="15">
                        <TextBlock Text="Детальная информация" FontWeight="Bold" FontSize="14" 
                                   Margin="0,0,0,15"/>

                        <TextBlock Text="Название:" FontWeight="SemiBold"/>
                        <TextBlock Name="DetailTitle" Margin="0,0,0,10"/>

                        <TextBlock Text="Тип:" FontWeight="SemiBold"/>
                        <TextBlock Name="DetailType" Margin="0,0,0,10"/>

                        <TextBlock Text="Год:" FontWeight="SemiBold"/>
                        <TextBlock Name="DetailYear" Margin="0,0,0,10"/>

                        <TextBlock Text="Жанр:" FontWeight="SemiBold"/>
                        <TextBlock Name="DetailGenre" Margin="0,0,0,10"/>

                        <TextBlock Text="Статус:" FontWeight="SemiBold"/>
                        <TextBlock Name="DetailStatus" Margin="0,0,0,10"/>

                        <TextBlock Text="Рейтинг:" FontWeight="SemiBold"/>
                        <TextBlock Name="DetailRating" Margin="0,0,0,10"/>
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>
    </Grid>
</Window>