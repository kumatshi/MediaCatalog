<Window x:Class="MediaCatalog.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:fa="clr-namespace:FontAwesome.WPF;assembly=FontAwesome.WPF"
        Title="Media Catalog"
        Width="900"
        Height="600"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource MaterialDesignPaper}">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesign3.Defaults.xaml"/>
                <materialDesign:BundledTheme BaseTheme="Dark"
                                             PrimaryColor="DeepOrange"
                                             SecondaryColor="Orange" />

            </ResourceDictionary.MergedDictionaries>
            
            <Color x:Key="SandColor">#EACCA3</Color>
            <Color x:Key="CaramelColor">#CE9258</Color>
            <Color x:Key="VeryDarkBrownColor">#280F05</Color>
            <Color x:Key="GoldBeigeColor">#DAB17D</Color>
            <Color x:Key="DeepBrownColor">#653F1F</Color>
            <Color x:Key="CopperColor">#B66F3A</Color>

            <SolidColorBrush x:Key="GoldBeigeBrush" Color="{StaticResource GoldBeigeColor}" />
            <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource CaramelColor}" />
            <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource CopperColor}" />
            <SolidColorBrush x:Key="CardBackgroundBrush" Color="#1F1B1A" />
            <SolidColorBrush x:Key="PanelBackgroundBrush" Color="#151212" />
            <SolidColorBrush x:Key="MutedTextBrush" Color="#BDB3AA" />

            <Style x:Key="AppCardStyle" TargetType="Border">
                <Setter Property="Background" Value="{StaticResource CardBackgroundBrush}" />
                <Setter Property="CornerRadius" Value="8" />
                <Setter Property="Padding" Value="8" />
                <Setter Property="Margin" Value="8" />
                <Setter Property="Effect">
                    <Setter.Value>
                        <DropShadowEffect Color="#000000" BlurRadius="8" ShadowDepth="2" Opacity="0.4"/>
                    </Setter.Value>
                </Setter>
            </Style>

            <Style x:Key="ListItemContainerStyle" TargetType="ListViewItem">
                <Setter Property="Opacity" Value="0" />
                <Style.Triggers>
                    <EventTrigger RoutedEvent="Loaded">
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                 From="0" To="1" Duration="0:0:0.25"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                </Style.Triggers>
            </Style>

        </ResourceDictionary>
    </Window.Resources>

    <Grid Margin="8">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <DockPanel Grid.Row="0" Margin="6" LastChildFill="False">

            <StackPanel Orientation="Horizontal" DockPanel.Dock="Left" VerticalAlignment="Center" Margin="6">

                <Button Style="{StaticResource MaterialDesignOutlinedButton}" Width="120" Height="36" Margin="4"
                        Click="AddButton_Click">
                    <StackPanel Orientation="Horizontal">
                        <fa:ImageAwesome Icon="Plus" Width="16" Margin="0,0,8,0"/>
                        <TextBlock Text="Добавить"/>
                    </StackPanel>
                </Button>

                <Button Style="{StaticResource MaterialDesignOutlinedButton}" Width="120" Height="36" Margin="4"
                        Click="ChangeStatusButton_Click">
                    <StackPanel Orientation="Horizontal">
                        <fa:ImageAwesome Icon="Check" Width="16" Margin="0,0,8,0"/>
                        <TextBlock Text="Завершить"/>
                    </StackPanel>
                </Button>

                <Button Style="{StaticResource MaterialDesignOutlinedButton}" Width="120" Height="36" Margin="4"
                        Click="StartProgressButton_Click">
                    <StackPanel Orientation="Horizontal">
                        <fa:ImageAwesome Icon="Play" Width="16" Margin="0,0,8,0"/>
                        <TextBlock Text="В процессе"/>
                    </StackPanel>
                </Button>

                <Button Style="{StaticResource MaterialDesignOutlinedButton}" Width="120" Height="36" Margin="4"
                        Click="PlanButton_Click">
                    <StackPanel Orientation="Horizontal">
                        <fa:ImageAwesome Icon="Calendar" Width="16" Margin="0,0,8,0"/>
                        <TextBlock Text="В планы"/>
                    </StackPanel>
                </Button>

                <Button Style="{StaticResource MaterialDesignFlatButton}" Width="120" Height="36" Margin="4"
                        Click="DeleteButton_Click">
                    <StackPanel Orientation="Horizontal">
                        <fa:ImageAwesome Icon="Trash" Width="16" Margin="0,0,8,0"/>
                        <TextBlock Text="Удалить"/>
                    </StackPanel>
                </Button>
            </StackPanel>

            <StackPanel Orientation="Horizontal" DockPanel.Dock="Right" Margin="6">

                <TextBox Name="SearchBox" Width="230" Height="36" Margin="4"
                         materialDesign:HintAssist.Hint="Поиск..."
                         TextChanged="SearchBox_TextChanged"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"/>

                <ComboBox Name="FilterComboBox" Width="160" Height="36" Margin="4"
                          SelectionChanged="FilterComboBox_SelectionChanged"
                          Style="{StaticResource MaterialDesignOutlinedComboBox}"/>

                <ToggleButton Width="48" Height="36" Margin="4"
                              Click="ThemeToggle_Click"
                              ToolTip="Сменить тему">
                    <fa:ImageAwesome Icon="Adjust" Width="18"/>
                </ToggleButton>

            </StackPanel>
        </DockPanel>


        <Grid Grid.Row="1" Margin="6">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="340"/>
            </Grid.ColumnDefinitions>

            <ListView Name="MediaListView"
                      Grid.Column="0"
                      Margin="6"
                      ItemContainerStyle="{StaticResource ListItemContainerStyle}">
                <ListView.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel />
                    </ItemsPanelTemplate>
                </ListView.ItemsPanel>

                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Border Style="{StaticResource AppCardStyle}" Width="260" Height="150">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <Border Grid.Column="0" Margin="4" CornerRadius="6" Background="#222">
                                    <Image Source="{Binding CoverImagePath}" Stretch="UniformToFill"/>
                                </Border>

                                <StackPanel Grid.Column="1" Margin="8">
                                    <TextBlock Text="{Binding Title}" FontSize="14" FontWeight="SemiBold" Foreground="White"/>
                                    <StackPanel Orientation="Horizontal" Margin="0,6,0,0">
                                        <TextBlock Text="{Binding MediaType}" Foreground="{StaticResource MutedTextBrush}" Margin="0,0,12,0"/>
                                        <TextBlock Text="{Binding Year}" Foreground="{StaticResource MutedTextBrush}" Margin="0,0,12,0"/>
                                        <TextBlock Text="{Binding Genre}" Foreground="{StaticResource MutedTextBrush}"/>
                                    </StackPanel>

                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,8,0,0">
                                        <TextBlock Text="{Binding Status.Name}" Foreground="{StaticResource GoldBeigeBrush}" Margin="0,0,8,0"/>
                                        <TextBlock Text="★" Foreground="{StaticResource GoldBeigeBrush}" Margin="0,0,4,0"/>
                                        <TextBlock Text="{Binding Rating}" Foreground="White"/>
                                    </StackPanel>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <Border Grid.Column="1" Background="{StaticResource PanelBackgroundBrush}"
                    CornerRadius="8" Padding="12" Margin="6">
                <ScrollViewer>
                    <StackPanel  Name="DetailPanel" Margin="6" >
                        <TextBlock Text="Детальная информация" FontSize="16" FontWeight="Bold" Foreground="White"/>

                        <TextBlock Text="Название:" Foreground="{StaticResource MutedTextBrush}" Margin="0,12,0,0"/>
                        <TextBlock Name="DetailTitle" Foreground="White"/>

                        <TextBlock Text="Тип:" Foreground="{StaticResource MutedTextBrush}" Margin="0,12,0,0"/>
                        <TextBlock Name="DetailType" Foreground="White"/>

                        <TextBlock Text="Год:" Foreground="{StaticResource MutedTextBrush}" Margin="0,12,0,0"/>
                        <TextBlock Name="DetailYear" Foreground="White"/>

                        <TextBlock Text="Жанр:" Foreground="{StaticResource MutedTextBrush}" Margin="0,12,0,0"/>
                        <TextBlock Name="DetailGenre" Foreground="White"/>

                        <TextBlock Text="Статус:" Foreground="{StaticResource MutedTextBrush}" Margin="0,12,0,0"/>
                        <TextBlock Name="DetailStatus" Foreground="White"/>

                        <TextBlock Text="Рейтинг:" Foreground="{StaticResource MutedTextBrush}" Margin="0,12,0,0"/>
                        <TextBlock Name="DetailRating" Foreground="White"/>

                        <TextBlock Text="Дата добавления:" Foreground="{StaticResource MutedTextBrush}" Margin="0,12,0,0"/>
                        <TextBlock Name="DetailDateAdded" Foreground="White"/>
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>

    </Grid>
</Window>
